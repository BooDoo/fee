#!/usr/bin/env node

// Generated by CoffeeScript 1.4.0
var Project, ROOT, cwd, fs, hasTrailingSlash, isAbsolute, program, resolvePathToApp, stripTrailingSlash;

fs = require('fs');

program = require('commander');

ROOT = "" + __dirname + "/..";

Project = require(ROOT);

cwd = process.cwd();

program.version(JSON.parse(fs.readFileSync("" + ROOT + "/package.json", 'utf8')).version);

program.command('new <name> [path]').description('Create a new application <name> in cwd or at <path> if <path> is supplied').action(function(name, path) {
  path = path != null ? path : cwd;
  if (!isAbsolute(path)) {
    path = "" + cwd + "/" + path;
  }
  path = resolvePathToApp(name, path);
  return Project.create(path);
});

isAbsolute = function(path) {
  return path.match(/^\//) != null;
};

resolvePathToApp = function(name, path) {
  if (hasTrailingSlash(path)) {
    path = stripTrailingSlash(path);
  }
  return "" + path + "/" + name;
};

stripTrailingSlash = function(path) {
  return path.slice(0, path.length - 1);
};

hasTrailingSlash = function(path) {
  return path.match(/\/$/) != null;
};

program.parse(process.argv);
